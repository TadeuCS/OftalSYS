<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="OftalSISPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Model.Convenio</class>
    <class>Model.TipoTelefone</class>
    <class>Model.ReceitaOculos</class>
    <class>Model.Endereco</class>
    <class>Model.Cor</class>
    <class>Model.Cidade</class>
    <class>Model.StatusUsuario</class>
    <class>Model.TipoAtendimento</class>
    <class>Model.Profissao</class>
    <class>Model.EstadoCivil</class>
    <class>Model.Atendimento</class>
    <class>Model.Fornecedor</class>
    <class>Model.Usuario</class>
    <class>Model.TipoUsuario</class>
    <class>Model.Paciente</class>
    <class>Model.StatusAtendimento</class>
    <class>Model.Uf</class>
    <class>Model.Cep</class>
    <class>Model.Telefone</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/oftaldb?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
